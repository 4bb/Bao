@model List<Shsict.InternalWeb.Models.OperatePlan>
@{
    ViewBag.Title = "出勤人员资质情况";
    Layout = "~/Views/Shared/_LayoutPad.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('input:jqmData(role="datebox")').mobiscroll(opt);
        $("#SearchBox").change(function () {
            window.location.href = "/PadOperatePlan/DayShift/" + $("#SearchBox").val();
        });
        $("input[name='radio-choice-b']").change(function () {
            window.location.href = "/PadOperatePlan/" + $(this).val() + "/" + $("#SearchBox").val();
        });
    });
</script>
<div class="ui-body">
    <div class="ui-bar ui-bar-c">
        <h4>出勤人员资质情况</h4>
        <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true" data-corners="false">
            @Html.TextBoxFor(a => a[0].MyDate, new { id = "SearchBox", data_role = "datebox" })
            <input type="radio" name="radio-choice-b" id="radio-choice-c" value="DayShift" checked="checked">
            <label for="radio-choice-c">日班</label>
            <input type="radio" name="radio-choice-b" id="radio-choice-e" value="NightShift">
            <label for="radio-choice-e">夜班</label>
        </fieldset>
    </div>
    <div class="ui-body-d">
        <table data-role="table" id="financial-table-reflow" data-mode="reflow" class="financial-table-reflow table-stroke">
            <thead>
                <tr>
                    <th>承包队</th>
                    <th>派工路数</th>
                    <th>桥边</th>
                    <th>喊勾</th>
                    <th>辅助工</th>
                    <th>其他</th>
                    <th>总人数</th>
                    <th>出勤差异</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Shsict.InternalWeb.Models.OperatePlan item in Model)
                {
                    <tr>
                        <th>@item.TEAMNAME</th>
                        <td>@item.OP_ROUTE</td>
                        <td>@item.QB</td>
                        <td>@item.HG</td>
                        <td>@item.FZ</td>
                        <td>@item.OTHER</td>
                        <td>@item.SHIFT_NUM</td>
                        <td>@item.ATD_DIFF</td>
                    </tr>      
                }
            </tbody>
        </table>
    </div>
</div>
