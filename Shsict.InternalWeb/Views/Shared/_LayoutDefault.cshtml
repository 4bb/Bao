<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.mobile-1.3.2.min.js"></script>
    <link href="~/Scripts/Jquery.mobile/jquery.mobile-1.3.2.min.css" rel="stylesheet" />
    <link href="~/Content/themes/Screen.css" rel="stylesheet" />

    <script src="~/Scripts/Time/PluginDatetime.js"></script>
    <script src="~/Scripts/Time/mobiscroll.js"></script>
    <link href="~/Scripts/Time/mobiscroll.custom-2.5.0.min.css" rel="stylesheet" />
    

      <script type="text/javascript">       
            var opt = {
                preset: 'date', //日期
                theme: 'jqm', //皮肤样式
                display: 'modal', //显示方式 
                mode: 'clickpick', //日期选择模式
                dateFormat: 'yy-mm-dd', // 日期格式
                setText: '确定', //确认按钮名称
                cancelText: '取消',//取消按钮名籍我
                dateOrder: 'yymmdd', //面板中日期排列格式
                dayText: '日', monthText: '月', yearText: '年', //面板中年月日文字
                endYear: 2020 //结束年份
            };         
    </script>
</head>

<body>
    <div data-role="page">
        <div id="header" data-theme="b" data-position="fixed" class="header" data-role="header">
            <h3>@ViewBag.Title</h3>
            @RenderSection("Header")
        </div>
        <div data-role="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
