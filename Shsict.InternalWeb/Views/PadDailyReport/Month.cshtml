@model Shsict.InternalWeb.Models.DailyReport
@{
    ViewBag.Title = "昼夜吞吐量";
    Layout = "~/Views/Shared/_LayoutPad.cshtml";
}

<script type="text/javascript">
    $(function () {
        $('input:jqmData(role="datebox")').mobiscroll(opt);
        $("#SearchBox").change(function () {
            window.location.href = "/PadDailyReport/Month/" + $("#SearchBox").val();
        });
        $("input[name='radio-choice-b']").change(function () {

            window.location.href = "/PadDailyReport/" + $(this).val() + "/" + $("#SearchBox").val();
        });
    });
</script>

<div class="ui-body">
  <div class="ui-bar ui-bar-c">
        <h4>昼夜吞吐量</h4>
         <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true" data-corners="false">
                @Html.TextBoxFor(a => a.MyDate, new { id = "SearchBox", data_role = "datebox",@class="str" })
                            <input type="radio" name="radio-choice-b" id="radio-choice-c" value="Day" >
                            <label for="radio-choice-c">日</label>
                            <input type="radio" name="radio-choice-b" id="radio-choice-d" value="Month" checked="checked">
                            <label for="radio-choice-d">月</label>
                            <input type="radio" name="radio-choice-b" id="radio-choice-e" value="Year">
                            <label for="radio-choice-e">年</label>

                        </fieldset>
          </div>
    <div class="ui-body-d">
        <table data-role="table" id="financial-table-reflow" data-mode="reflow" class="financial-table-reflow table-stroke">
            <thead>
       
                <tr>
                    <th>月计划TEU</th>
                    <th>月目标TEU</th>
                    <th>月实际TEU</th>
                    <th>月驳船</th>
                    <th>月穿梭巴士</th>
                    <th>月计划完成率</th>
                    <th>月预计箱量</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                   <td>@Html.DisplayFor(a => a.MONTHLY_PLAN)</td>
            <td>@Html.DisplayFor(a => a.MONTHLY_TARGET)</td>
            <td>@Html.DisplayFor(a => a.MONTHLY_ACTUAL)</td>
            <td>@Html.DisplayFor(a => a.MONTHLY_BARGE)</td>
            <td>@Html.DisplayFor(a => a.MONTHLY_SHUTTLE)</td>
            <td>@Html.DisplayFor(a => a.MyMONTHLY_COMPLETERATE)</td>
            <td>@Html.DisplayFor(a => a.MONTHLY_PLANCONTAINER)</td>

                </tr>

            </tbody>
        </table>
</div>
</div>


